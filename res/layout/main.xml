<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/bg_1"> 
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:stretchColumns="1">
		<TextView  
			android:layout_width="fill_parent" 
			android:layout_height="80dip"
			/>
		<TableRow>
			<TextView android:id="@+id/affairs_cooking" 
			    android:layout_width="70dip" 
			    android:layout_height="40dip"
			    android:textColor = "#9966cc"
			    android:textSize ="20sp"
			    android:paddingRight ="10dip"
			    android:layout_gravity="right"
			    android:text = "@string/affairs_cooking"/>	
			<TextView android:id="@+id/affairs_washing" 
			    android:layout_width="60dip" 
			    android:layout_height="50dip"
			    android:text ="@string/affairs_washing"
			    android:gravity="right"
			    android:textSize ="25sp"
			    android:textColor = "#EEE8AA"
				android:singleLine ="false"
				android:layout_gravity="right|bottom"
			    />
			 <TextView  android:id="@+id/affairs_climbing" 
			    android:layout_width="50dip" 
			    android:layout_height="20dip"
			    android:textColor = "#008080"
			    android:text = "@string/affairs_climbing" 
			    android:layout_gravity="left|top"
			    />
		</TableRow>
		<TableRow>
			<TextView  android:id="@+id/affairs_cleaning" 
			    android:layout_width="105dip" 
			    android:layout_height="39dip"
			    android:textColor = "#99aa11"
			    android:textSize ="19sp"
			    android:layout_gravity="right|top"
			    android:text = "@string/affairs_cleaning"
			    />
			<TextView  android:id="@+id/affairs_sleeping" 
			    android:layout_width="45dip" 
			    android:layout_height="wrap_content"
			    android:text ="@string/affairs_sleeping"
			    android:textColor = "#991133"
			    android:layout_gravity="center_horizontal"
			    />
			<TextView android:id="@+id/affairs_shopping" 
			    android:layout_width="50dip" 
			    android:layout_height="20dip"
			    android:textColor = "#ff0044"
			    android:text = "@string/affairs_shopping"
			    />
			<TextView android:id="@+id/affairs_noting" 
			    android:layout_width="60dip" 
			    android:layout_height="30dip"
			    android:textSize ="21sp"
			    android:text ="@string/affairs_noting"
			    android:gravity="right"
			    android:textColor = "#991133"
				android:layout_gravity="center_horizontal"
				android:singleLine = "false"
			    />			    
		</TableRow>
		<TableRow>
			<TextView android:id="@+id/affairs_gaming" 
			    android:layout_width="45dip" 
			    android:layout_height="40dip"
			    android:textColor = "#001144"
			    android:textSize ="22sp"
			    android:layout_gravity="right"
			    android:text = "@string/affairs_gaming" 
			    />
			<TextView  android:id="@+id/affairs_watching_movie" 
			    android:layout_width="45dip" 
			    android:layout_height="wrap_content"
			    android:textColor = "#991133"
			    android:textSize ="19sp"
			    android:text ="@string/affairs_watching_movie"
			    android:layout_gravity="center_horizontal"
			    />
		</TableRow>
		<TableRow>
			<TextView  android:id="@+id/affairs_walking" 
			    android:layout_width="50dip" 
			    android:layout_height="50dip"
			    android:textColor = "#991133"
			    android:textSize ="21sp"
			    android:layout_gravity="right"
			    android:text = "@string/affairs_walking"
			    />
			<TextView  android:id="@+id/affairs_basketball"
			    android:layout_width="60dip" 
			    android:layout_height="30dip"
			    android:text ="@string/affairs_basketball"
			    android:gravity="right"
			    android:textSize ="23sp"
			    android:textColor = "#44bbcc"
				android:layout_gravity="center_horizontal"
				android:singleLine ="false"
			    />			    
		</TableRow>
		<TableRow>
			<TextView  android:id="@+id/affairs_K" 
			    android:layout_width="40dip" 
			    android:layout_height="60dip"
			    android:textColor = "#00bb00"
			    android:textSize ="20sp"
			    android:layout_gravity="right|bottom"
			    android:text ="@string/affairs_K"
			    />
			<TextView  android:id="@+id/affairs_surfing" 
			    android:layout_width="50dip" 
			    android:layout_height="20dip"
			    android:textColor = "#008080"
			    android:text = "@string/affairs_surfing" 
			    />
			<TextView android:id="@+id/affairs_coding"  
			    android:layout_width="60dip" 
			    android:layout_height="30dip"
			    android:text ="@string/affairs_coding"
			    android:gravity="right"
			    android:textColor = "#8FBC8F"
				android:layout_gravity="center_horizontal"
				android:singleLine ="false"
			    />	
		 </TableRow>
		 <TableRow>		    
			<TextView  android:id="@+id/affairs_anthing" 
			    android:layout_width="75dip" 
			    android:layout_height="19dip"
			    android:textColor = "#AFEEEE"
			    android:text ="@string/affairs_anthing"
				android:layout_gravity="right|bottom"
			    />
			<TextView  android:id="@+id/affairs_chasing_after_girls" 
			    android:layout_width="75dip" 
			    android:layout_height="19dip"
			    android:textColor = "#AFEEEE"
			    android:text ="@string/affairs_chasing_after_girls"
				android:layout_gravity="right|bottom"
			    />
		 </TableRow>
	</TableLayout>    	    
	<TextView android:id="@+id/result" 
		android:layout_height="wrap_content" 
		android:layout_centerHorizontal="true" 
		android:layout_marginLeft="10dip" 
		android:layout_marginTop="5dip" 
		android:layout_width="130dip"
		android:textSize="24dip" 
		android:gravity="left" 
		android:layout_alignParentRight="true" 	
		android:text="" />
	<Button 
		android:id="@+id/submit" 
		android:layout_width="80sp"
		android:layout_height="40sp" 
		android:shadowRadius ="30"
		android:text="@string/doSth_btn" />

</LinearLayout>
